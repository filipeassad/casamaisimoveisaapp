<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/googleMapsFragmentHistorico"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/txtDataHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/11/2020"
                android:textColor="#0D5ED9"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"></TextView>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome usuário: "
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/txtNomeUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filipe"
                android:textColor="#0D5ED9"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"></TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profissão:"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"></TextView>

            <TextView
                android:id="@+id/txtProfissaoUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Captador"
                android:textColor="#0D5ED9"
                android:layout_marginLeft="5dp"
                android:textSize="14sp"></TextView>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>