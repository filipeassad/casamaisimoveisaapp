<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Endereço Selecionado"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginTop="10dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Bairro:"
            android:textColor="#0D5ED9"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"></TextView>

        <TextView
            android:id="@+id/txtBairroMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="texto"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Rua:"
            android:textColor="#0D5ED9"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"></TextView>

        <TextView
            android:id="@+id/txtRuaMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="texto"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="left|center">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Número:"
            android:textColor="#0D5ED9"
            android:textSize="12sp"
            android:layout_marginLeft="20dp"
            android:gravity="right"></TextView>

        <TextView
            android:id="@+id/txtNumeroMapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="texto"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnRota"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rota"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#0D5ED9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></Button>

        <Button
            android:id="@+id/btnExcluirEndereco"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Deletar Endereço"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#0D5ED9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnCadastrarImovel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cadastrar Imóvel"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="#0D5ED9"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"></Button>
    </LinearLayout>

</LinearLayout>