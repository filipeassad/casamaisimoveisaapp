<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnVoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:text="voltar"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_botao_topo_form"
                    android:textColor="#0D5ED9"
                    android:textSize="12sp"></Button>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes Imóvel"
                    android:textColor="#000000"
                    android:textSize="20sp"></TextView>

                <Button
                    android:id="@+id/btnAvancar"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:text="Avançar"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_botao_topo_form"
                    android:textColor="#0D5ED9"
                    android:textSize="12sp"></Button>

            </FrameLayout>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/selector_botao_arrendondado_azul"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dados Proprietário"
                android:textColor="#0D5ED9"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rgrpSituacaoAnuncio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbtnPendente"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendente"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_vermelha"
                            android:layout_marginLeft="5dp"></LinearLayout>

                        <RadioButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rbtnAtualizar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Atualizar"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_azul"
                            android:layout_marginLeft="5dp"></LinearLayout>

                        <RadioButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rbtnOk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ok"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_verde"
                            android:layout_marginLeft="5dp"></LinearLayout>


                    </RadioGroup>

                    <RadioGroup
                        android:id="@+id/rgrpSituacaoAnuncio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rbtnVendido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendido"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_cinza"
                            android:layout_marginLeft="5dp"></LinearLayout>

                        <RadioButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rbtnExclusividade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exclusividade"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_preta"
                            android:layout_marginLeft="5dp"></LinearLayout>

                        <RadioButton
                            android:layout_marginLeft="10dp"
                            android:id="@+id/rbtnParticular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Particular"
                            android:textColor="#000000"
                            android:buttonTint="#000"
                            android:textSize="12sp">
                        </RadioButton>

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@drawable/shape_bola_marrom"
                            android:layout_marginLeft="5dp"></LinearLayout>

                    </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condição Imóvel:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/rgrpCondicaoImovel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp">

                    <RadioButton
                        android:id="@+id/rbtnNovo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Novo"
                        android:textColor="#000000"
                        android:buttonTint="#000"
                        android:textSize="12sp">
                    </RadioButton>

                    <RadioButton
                        android:layout_marginLeft="10dp"
                        android:id="@+id/rbtnUsado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usado"
                        android:textColor="#000000"
                        android:buttonTint="#000"
                        android:textSize="12sp">
                    </RadioButton>

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Proprietário:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtNomeProprietario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite o nome do proprietário"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="textPersonName|textCapWords"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtCpfProprietario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite o CPF do proprietário"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="phone"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observação Coordenador:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtObservacaoCoordenador"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:inputType="textPersonName|textMultiLine|textCapWords"
                android:hint="Digite sua observação para o coordenador"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textSize="14sp"></EditText>

            <TextView
                android:id="@+id/txtTelefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center">

                <EditText
                    android:id="@+id/edtTelefoneProprietario"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_edittext_form"
                    android:textColor="#000000"
                    android:textColorHint="#c4c4c4"
                    android:hint="Digite o telefone do proprietário"
                    android:paddingLeft="10dp"
                    android:textSize="14sp"
                    android:inputType="phone"></EditText>

                <Button
                    android:id="@+id/btnAdicionar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    android:background="@drawable/selector_botao_azul_redondo"
                    android:layout_marginRight="20dp"></Button>

            </LinearLayout>

            <ListView
                android:id="@+id/lvTelefoneProprietario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#fff"
                android:dividerHeight="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

            </ListView>

            <Button
                android:id="@+id/btnAvancarSecundario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avançar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/selector_botao_arrendondado_azul"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>