<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/shape_item_telefone">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:src="@drawable/celular"
            android:layout_marginLeft="20dp"></ImageView>

        <TextView
            android:id="@+id/txtTelefoneProprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(00) 00000-0000"
            android:textColor="#0D5ED9"
            android:layout_marginLeft="20dp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btnRemoverTelefone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="x"
        android:layout_gravity="right|center"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_botao_vermelho_redondo"></Button>

</FrameLayout>