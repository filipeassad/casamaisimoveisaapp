<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <Button
                    android:id="@+id/btnVoltar"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="left"
                    android:text="voltar"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_botao_topo_form"
                    android:textColor="#0D5ED9"
                    android:textSize="12sp"></Button>

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes Imóvel"
                    android:textColor="#000000"
                    android:textSize="20sp"></TextView>

                <Button
                    android:id="@+id/btnAvancar"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_gravity="right"
                    android:text="Avançar"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/selector_botao_topo_form"
                    android:textColor="#0D5ED9"
                    android:textSize="12sp"></Button>

            </FrameLayout>

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Editar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/selector_botao_arrendondado_azul"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:visibility="gone"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Informações Imóvel"
                android:textColor="#0D5ED9"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo Imóvel:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <Spinner
                android:id="@+id/spTipoImovel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:paddingLeft="10dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fase Obra:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <Spinner
                android:id="@+id/spFaseObra"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:paddingLeft="10dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esgoto:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <Spinner
                android:id="@+id/spEsgoto"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:paddingLeft="10dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo Rua:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <Spinner
                android:id="@+id/spTipoRua"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:paddingLeft="10dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtValor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite o valor do imóvel"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="phone"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Honorário:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtHonorario"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite o valor do honorário"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="phone">></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Área Terreno:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtAreaTerreno"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite a área do terreno"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="phone">></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Área Contruída:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtAreaConstruida"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:hint="Digite a área construída"
                android:paddingLeft="10dp"
                android:textSize="14sp"
                android:inputType="phone">></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Observação:"
                android:textColor="#0D5ED9"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"></TextView>

            <EditText
                android:id="@+id/edtObservacao"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_edittext_form"
                android:textColor="#000000"
                android:textColorHint="#c4c4c4"
                android:inputType="textPersonName|textMultiLine|textCapWords"
                android:hint="Digite sua observação"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:textSize="14sp"></EditText>

            <Button
                android:id="@+id/btnAvancarSecundario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Avançar"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:background="@drawable/selector_botao_arrendondado_azul"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="50dp"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>