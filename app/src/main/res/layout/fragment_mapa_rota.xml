<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/googleMapsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/edtBairroRota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bairro Tiradentes"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_bola_vermelha"
                android:layout_marginRight="5dp"></LinearLayout>

            <TextView
                android:id="@+id/txtImoveisNovos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Novo: "
                android:textColor="#767676"
                android:textSize="12sp"></TextView>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_bola_amarela"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"></LinearLayout>

            <TextView
                android:id="@+id/txtImoveisRetorno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retorno:"
                android:textColor="#767676"
                android:textSize="12sp"></TextView>

            <LinearLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/shape_bola_azul"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="20dp"></LinearLayout>
            <TextView
                android:id="@+id/txtImoveisFinalizados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finalizado:"
                android:textColor="#767676"
                android:textSize="12sp"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnNovoEndereco"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Novo EndereÃ§o"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/selector_botao_arrendondado_azul"
                android:textSize="11sp">

            </Button>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>